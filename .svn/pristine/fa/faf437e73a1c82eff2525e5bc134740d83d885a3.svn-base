.capture-subject-nav .bjj-nav { height: 80px; line-height: 80px; }
.bjj-cont-sidebar .subject-list { height: calc(100% - 85px); overflow-y: auto; overflow-x: hidden; }
.bjj-cont-sidebar .empty-subject-list { margin: 200px auto; text-align: center; }
.bjj-cont-sidebar .empty-subject-list .help-block { display: block; margin-top: 5px; margin-bottom: 10px; color: #737373; }
.bjj-cont-sidebar .subject-list::-webkit-scrollbar { width: 0; }
.bjj-cont-sidebar .subject-list .nav-list { padding-left: 0; }
.bjj-cont-sidebar .subject-list .nav-list li { width: 100%; height: 40px;line-height: 40px; list-style: none; color: #333; }
.bjj-cont-sidebar .subject-list .nav-list li:hover { background: #eee; }
.bjj-cont-sidebar .subject-list .nav-list li.active { background: #eee; }
.bjj-cont-sidebar .subject-list .nav-list li a { max-width: 150px; padding-left: 15px; color:#333; display: inline-block; }
.bjj-cont-sidebar .subject-list .nav-list li .badge { margin: 12px 10px 12px 0; padding: 1px 7px 3px 7px; font-weight: normal; background-color: #F76260; transform: scale(.875); -webkit-transform: scale(.875); }
.bjj-cont-page .help-null { position: absolute; top: 30%; right: calc(50% - 265px); color: #e5e5e5; }
.bjj-cont-page .help-null div { margin-left: -25px; color: #999; }
.capture-conditions { height: 50px; line-height: 48px; border-bottom:1px dashed #ededed; clear: both; }
.capture-conditions .laydateTime { width: 180px; height: 25px; padding-left: 5px; border:1px solid #ddd; border-radius: 4px; margin: 10px 10px 0 0; }
.captureSubjectLoading { width: 220px; }

