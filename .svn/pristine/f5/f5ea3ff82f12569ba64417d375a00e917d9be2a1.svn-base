.account-monitor-nav .bjj-nav { height: 80px; line-height: 80px; }
.account-monitor-nav .bjj-nav b { font-size: 14px; font-weight: normal; }

.bjj-cont-sidebar .account-monitor-list { height: calc(100% - 95px); overflow-y: auto; overflow-x: hidden; }
.bjj-cont-sidebar .account-monitor-list .monitor-list li a { color: #333; }
.bjj-cont-sidebar .account-monitor-list .nav-list { list-style: none; padding-left: 0; }
.bjj-cont-sidebar .account-monitor-list .new-add-site { width: 180px; height: 45px; line-height: 45px; color: #999; border: 1px dashed #ddd; margin: 10px 20px; text-align: center; cursor: pointer; }
.bjj-cont-sidebar .account-monitor-list .new-add-site:hover { color: #2494f2; border: 1px dashed #2494f2; }
.bjj-cont-sidebar .account-monitor-list .new-add-site:hover .fa-plus { color: #2494f2; }
.bjj-cont-sidebar .account-monitor-list .fa-plus { color: #999; margin-right: 5px; }
.bjj-cont-sidebar .account-monitor-list .nav-list li { width: 100%; height: 65px; border-bottom: 1px dashed #ddd; }
.bjj-cont-sidebar .account-monitor-list .nav-list li:hover { background: #eee; }
.bjj-cont-sidebar .account-monitor-list .nav-list li.active { background: #eee; }
.bjj-cont-sidebar .account-monitor-list .nav-list li a { padding: 20px 16px 0; line-height: 20px; color: #333; word-break:break-all; }
.bjj-cont-sidebar .account-monitor-list .nav-list li a:hover { color: #333; }
.bjj-cont-sidebar .account-monitor-list .nav-list li a.active { color: #333; }

.copyrightMonitorLoading { width: 220px; }
